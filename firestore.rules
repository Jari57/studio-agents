rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================================================
    // USER DATA - Only the authenticated user can access their own data
    // ==========================================================================
    match /users/{userId} {
      // User can read/write their own user document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Projects subcollection
      match /projects/{projectId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Generations/history subcollection
      match /generations/{generationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Preferences subcollection
      match /preferences/{prefId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Sessions subcollection (login history)
      match /sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Voices subcollection (voice cloning samples)
      match /voices/{voiceId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // ==========================================================================
    // INVESTOR ACCESS REQUESTS - Users can create, admins can read
    // ==========================================================================
    match /investorRequests/{requestId} {
      // Anyone authenticated can create a request
      allow create: if request.auth != null;
      // Only the requester can read their own request
      allow read: if request.auth != null && resource.data.email == request.auth.token.email;
      // No updates or deletes from clients
      allow update, delete: if false;
    }
    
    // ==========================================================================
    // PUBLIC CONTENT - Read-only for authenticated users
    // ==========================================================================
    match /publicContent/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // Admin SDK only
    }
    
    // ==========================================================================
    // ADMIN COLLECTIONS - Backend only (no client access)
    // ==========================================================================
    match /adminData/{document=**} {
      allow read, write: if false; // Admin SDK bypasses rules
    }
    
    match /analytics/{document=**} {
      allow read, write: if false; // Admin SDK only
    }
  }
}
