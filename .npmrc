# NPM Optimization Configuration

# Use ci for deterministic installs
# npm ci instead of npm install

# Reduce install verbosity
loglevel=warn

# Prefer offline dependencies (if already cached)
prefer-offline=true

# Cache dependencies aggressively
cache-min=9999999

# Reduce disk I/O by bundling optional dependencies
save-optional=false

# Use lockfile strictly
legacy-peer-deps=false

# Limit concurrent operations to reduce memory usage
max-sockets=10
