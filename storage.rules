rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ==========================================================================
    // USER FILES - Only the authenticated user can access their own files
    // ==========================================================================
    match /users/{userId}/{allPaths=**} {
      // User can read their own files
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // User can write their own files with size limits
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 50 * 1024 * 1024; // 50MB max per file
    }
    
    // ==========================================================================
    // PUBLIC ASSETS - Read-only (logos, default images, etc.)
    // ==========================================================================
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Admin SDK only
    }
    
    // ==========================================================================
    // TEMP UPLOADS - Short-lived files for processing
    // ==========================================================================
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null 
                         && request.auth.uid == userId
                         && request.resource.size < 100 * 1024 * 1024; // 100MB for temp
    }
    
    // ==========================================================================
    // SHARED CONTENT - Users can read shared content, owners can write
    // ==========================================================================
    match /shared/{shareId}/{allPaths=**} {
      // Anyone can read shared content (public links)
      allow read: if true;
      // Only backend can write (validates ownership server-side)
      allow write: if false; // Admin SDK only
    }
  }
}
